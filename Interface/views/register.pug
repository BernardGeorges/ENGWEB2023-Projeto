extends layout


block content
  body.w3-inter(style = "min-height:100vh;").w3-display-container
    - const head = {"display": "inline-block","margin-left": "5%"}
    - const divs = {"display": "inline-block","margin-left": "2.5%"}
    header.w3-light-grey.w3-card(style = "width : 100%; position: sticky; top: 0; z-index:9999")
      a(href="/")
        img(src="/images/logo1.2.png" width="15%" height="auto" style = head)
      h4.w3-inter(style=divs)
        a(href="/prod" style="text-decoration:none")  Produtos
      h4.w3-inter(style=divs)
        a(href="/contacts" style="text-decoration:none") Contacts
      - const btn1 = {"display": "inliene-block","margin-right": "5%", "margin-top": "1.75%"}
      a.w3-hide(href="/login" class="w3-center-text w3-button w3-deep-orange w3-border  w3-border-deep-orange w3-round-xxlarge w3-right w3-hover-light-grey w3-hover-text-deep-orange w3-text-light-grey" style=btn1) Log in
    div.w3-display-middle(style = "width: 550px; height: 350px ")
        .w3-bar(style="padding-left:2px; padding-right:2px ")
          a.w3-bar-item.w3-button.w3-light-grey.w3-text-dark-grey(href="/login" style="width:50%") Iniciar Sess√£o
          .w3-bar-item.w3-center.w3-border-top.w3-border-left.w3-border-right.w3-border-deep-orange.w3-text-deep-orange(style="width:50%; color:") Registrar
        form(action="/register" method="POST" style = "height: 100%")
            fieldset.w3-card.w3-padding-large.w3-border.w3-border-deep-orange
                .w3-padding-16
                  label Utilizador 
                  input.w3-input(type="text" name="username")
                  .w3-margin-top
                    label Nome 
                    input.w3-input(type="text" name="name")
                  .w3-margin-top 
                    label Palavra-passe
                    input.w3-input(type="password" name="password" style="padding-bottom: 12px;")
            .w3-center(style = "margin-top: 20px; margin-bottom: 10px")
              input.w3-button.w3-deep-orange.w3-border.w3-border-deep-orange.w3-round-xxlarge.w3-hover-light-grey.w3-hover-text-deep-orange.w3-text-light-grey(type="submit" value="REGISTRAR" style = "width: 40%; font-weight:600")