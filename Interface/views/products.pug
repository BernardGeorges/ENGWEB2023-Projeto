extends layout

block content
  - const head = {"display": "inline-block","margin-left": "5%"}
  - const divs = {"display": "inline-block","margin-left": "2.5%"}
  header.w3-light-grey.w3-card.w3-inter(style = "width : 100%; position: sticky; top: 0; z-index:9999")
    a.w3-text-deep-orange(href="/")
      img(src="/images/logo1.2.png" width="15%" height="auto" style = head)
    h4.w3-inter(style=divs)
      a(href="/prod")  Products
    h4.w3-inter(style=divs)
      a(href="/contacts") Contacts
    - const btn1 = {"display": "inline-block","margin-right": "5%", "margin-top": "2.4%"}
    a(href="/login" class="w3-center-text w3-button w3-deep-orange w3-border  w3-border-deep-orange w3-round-xxlarge w3-right w3-hover-light-grey w3-hover-text-deep-orange w3-text-light-grey" style=btn1) Log in
  .w3-row
    .w3-col(style="width: 12.5%")
      .w3-container.w3-deep-orange.w3-center 
        a(href="#" class="w3-bar-item w3-button") Preço(mais baixo) 
        a(href="#" class="w3-bar-item w3-button") Preço(mais altos)
        p 
          b TIPO 
        form(action="/register" method="POST" style = "height: 100%")
            fieldset.w3-card.w3-padding-large.w3-border.w3-border-deep-orange
              each tipo in tipos 
                input.w3-check(type="checkbox")
                label tipo 
            .w3-center(style = "margin-top: 20px; margin-bottom: 10px")
              input.w3-button.w3-round-xxlarge.w3-hover-light-grey.w3-hover-text-deep-orange.w3-text-light-grey(type="submit" value="Filter" style = "width: 40%; font-weight:600")
    .w3-col(style="width: 75%")
      .w3-card
        .w3-row-padding
          - const products = [{ name: "Product 1", image: "/images/loja.jpeg", description: "Description of Product 1", price: 50.1, marca: "Robenta" }] 
          each product in products
            .w3-quarter
              .w3-margin
                .product-container
                  img(src=product.image, style="width: 100%")
                  .product-overlay
                    h4.product-name #{product.name}
                    p.product-description #{product.description}
                    p.product-price #{product.price}

    .w3-col(style="width: 12.5%")
      p

  include footer.pug
