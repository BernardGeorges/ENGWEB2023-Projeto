extends layout

block content
  header.w3-light-grey.w3-card.w3-inter(style = "display: flex; width : 100%; position: sticky; top: 0; z-index:9999")
   div(style="display: flex; align-items: center;width:70%")
     a(href="/" style="width:25%; margin-left: 5%")
       img(src="/images/logo1.2.png" width="100%" height="auto")
     h4.w3-inter(style="margin-left: 2.5%")
         a(href="/prod" style="text-decoration:none")  Produtos
     h4.w3-inter(style="margin-left: 2.5%")
         a(href="/contacts" style="text-decoration:none") Contactos
   if login
     - const btn1 = {"margin-right": "5%", "margin-top": "2.4%"}
     div(style="display: flex; justify-content: flex-end; align-items: center;  width : 30%")
       a(href="/login" class="w3-center-text w3-button w3-deep-orange w3-border  w3-border-deep-orange w3-round-xxlarge w3-right w3-hover-light-grey w3-hover-text-deep-orange w3-text-light-grey" style=" margin-right: 5%") Log in
   else 
     div(style="display: flex; ; align-items: center; width : 30%")
       .w3-row
         .w3-half
           a(style= " margin-right: 5%; display: flex; ; align-items: center; justify-content: flex-end;")
             img(src="/images/shopping-cart.png" style="width:20%") 
         .w3-half(style="height:100%; display: flex; ; align-items: center; justify-content: center;" )
           a(href="/logout" class="w3-button w3-deep-orange w3-border  w3-border-deep-orange w3-round-xxlarge w3-hover-light-grey w3-hover-text-deep-orange w3-text-light-grey" style="height:100%; width:auto; margin-right: 5%; margin-top:2.5%") Log out
  .w3-row.w3-inter
    .w3-col(style = "width:12.5%")
      p 
    .w3-col(style = "width:75%")
      .w3-display-container.w3-center
        img(src="/images/felicidade.png" style="width:100%; height: 100%")
        .w3-padding.w3-display-leftmiddle.w3-xlarge.w3-text-deep-orange Paulo Pereira e Pinto - Confiança e Experiência em cada serviço
      h1.w3-inter
        b.w3-border-deep-orange.w3-margin(style="border-bottom-width: 5px !important; border-bottom-style: solid !important") NOSSOS SERVIÇOS
      .w3-row-padding
        .w3-col.w3-card.w3-center.w3-margin(style="width: 22.5%")
          img.w3-padding-24(src="/images/diagnostic.png" style="width:70%")
          h3
            b.w3-text-deep-orange.w3-inter DIAGNÓSTICO
        .w3-quarter.w3-card.w3-center.w3-margin(style="width: 22.5%")
          img.w3-padding-24(src="/images/maintenance.png" style="width:70%")
          h3
            b.w3-text-deep-orange.w3-inter INSTALAÇÃO
        .w3-quarter.w3-card.w3-center.w3-margin(style="width: 22.5%")
          img.w3-padding-24(src="/images/manuntencao.png" style="width:70%")
          h3
            b.w3-text-deep-orange.w3-inter MANUTENÇÃO
        .w3-quarter.w3-card.w3-center.w3-margin(style="width: 22.5%")
          img.w3-padding-24(src="/images/tools.png" style="width:70%")
          h3
            b.w3-text-deep-orange.w3-inter REPARAÇÃO
    .w3-col(style = "width:12.5%")
      p 
  .w3-padding
  include footer.pug
